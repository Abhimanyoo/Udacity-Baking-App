<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/view_holder_main_card_background"
            android:id="@+id/view_holder_main_cv"
            app:cardCornerRadius="32dp"
            app:cardElevation="@dimen/cardview_default_elevation"

            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/view_holder_main_card_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_holder_main_title_tv"
                    tools:text="@string/app_name"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/view_holder_main_desc_tv"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_holder_main_desc_tv"
                    tools:text="@string/app_name"

                    app:layout_constraintStart_toStartOf="@id/view_holder_main_title_tv"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>





        </android.support.v7.widget.CardView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_holder_main_servings_tv"
            tools:text="@string/app_name"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

            app:layout_constraintEnd_toEndOf="@id/view_holder_main_cv"
            app:layout_constraintTop_toBottomOf="@id/view_holder_main_cv"/>

    </android.support.constraint.ConstraintLayout>

</layout>